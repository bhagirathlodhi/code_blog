<div class="container mt-5">
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-md-8 mb-4">
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-6 mt-2">
              <% if post.pimg.attached? %>
                <center>
                <div>
                  <%= image_tag post.pimg, class: "card-img", style: "margin-left: 10px;" %>
                </div>
                </center>
              <% end %>
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= truncate(post.des, length: 80) %></p>
              </div>
            </div>
          </div>
          <%= link_to "show", post_path(post),class: "btn btn-info mt-2"  %>
          <% if user_post(post) %>
            <%= link_to "delete", post_path(post), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
            },class: "btn btn-outline-warning mt-2"%>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
